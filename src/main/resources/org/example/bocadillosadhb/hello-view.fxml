<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="380.0" prefWidth="636.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.bocadillosadhb.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TableView fx:id="tablePedidos" prefHeight="167.0" prefWidth="644.0">
     <columns>
       <TableColumn fx:id="colId" prefWidth="75.0" text="Id" />
       <TableColumn fx:id="colCantidad" prefWidth="75.0" text="Cantidad" />
         <TableColumn fx:id="colEstado" prefWidth="75.0" text="Estado" />
         <TableColumn fx:id="colFecha" prefWidth="75.0" text="Fecha" />
         <TableColumn fx:id="colClienteId" prefWidth="75.0" text="Cliente Id" />
         <TableColumn fx:id="colProductoId" prefWidth="75.0" text="Producto Id" />
     </columns>
   </TableView>
   <ComboBox fx:id="comboClientes" prefHeight="5.0" prefWidth="263.0" promptText="Clientes" />
   <ComboBox fx:id="comboProductos" prefHeight="33.0" prefWidth="263.0" promptText="Productos" />
   <TextField fx:id="txtCantidad" prefHeight="0.0" prefWidth="596.0" promptText="Cantidad" />
   <Button fx:id="bttnInsert" mnemonicParsing="false" text="Insertar Pedido" />

    <Label fx:id="welcomeText" />
</VBox>
